{
	"name": "test-pair",
	"displayName": "TestPair",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.test-pair"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.test-pair",
				"title": "Pair Source/Test"
			}
		],
		"configuration": [
			{
				"title": "TestPair",
				"properties": {
					"testPair.testFileExtensions": {
						"description": "Specifies test file extensions",
						"scope": "window",
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"extension": {
									"type": "string",
									"description": "file extension"
								},
								"globs": {
									"type": "array",
									"description": "the glob patterns for test filenames, @@ as source filename",
									"items": {
										"type": "string"
									}
								}
							}
						},
						"default": [
							{
								"extension": "php",
								"globs": ["@@Test.php"]
							},
							{
								"extension": "cc",
								"globs": ["@@_unittest.cc"]
							},
							{
								"extension": "py",
								"globs": ["test_@@.py"]
							},
							{
								"extension": "java",
								"globs": ["@@Test.java"]
							},
							{
								"extension": "groovy",
								"globs": ["@@Test.groovy"]
							},
							{
								"extension": "js",
								"globs": ["@@.{spec,test}.{ts,js}"]
							},
							{
								"extension": "ts",
								"globs": ["@@.{spec,test}.{ts,js}"]
							},
							{
								"extension": "vue",
								"globs": ["@@.{spec,test}.{ts,js}"]
							},
							{
								"extension": "jsx",
								"globs": ["@@.{spec,test}.{ts,js}"]
							},
							{
								"extension": "rb",
								"globs": ["@@{_spec,_test}.rb"]
							},
							{
								"extension": "go",
								"globs": ["@@_test.go"]
							},
							{
								"extension": "swift",
								"globs": ["@@Tests.swift"]
							},
							{
								"extension": "m",
								"globs": ["@@Test.m"]
							},
							{
								"extension": "r",
								"globs": ["test_@@.r"]
							}
						]
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
